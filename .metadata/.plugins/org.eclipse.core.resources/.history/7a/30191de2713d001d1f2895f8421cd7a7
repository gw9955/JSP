	<%	// 스크립틀릿
		// 선언문 태그와 달리 지역변수 a, b이다
		int a = 2;
		int b = 3;
		int sum = a + b;
		out.println("2 + 3 = " + sum);
	%>
	<hr />
	<%
		a++;
		b++;
		sum = a + b;
		out.println("3 + 4 = " + sum);
	%>
</body>
