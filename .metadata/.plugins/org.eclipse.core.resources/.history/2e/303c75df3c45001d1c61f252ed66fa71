<script type="text/javascript">
   function checkForm() {
      // 숫자 여부는 isNaN() 함수를 활용하여 검사
      // isNaN : is Not a Number의 약자
      // 숫자면 false, 숫자가 아니면 true
      let val = "개똥이";
      
      console.log(isNaN(val));
   }
</script>
